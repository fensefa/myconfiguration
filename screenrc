# set display info on the bottom
caption always "%{= kw}%-w%{= kG}%{+b}[%n %t]%{-b}%{= kw}%+w %=%d %M %0c %{g}%H%{-}"

# define a bigger scrollback, defalut is 100 lines
defscrollback 1000

# enable mouse scroll bar
termcapinfo xterm* ti@:te@

# clear screen after closing vim
altscreen on

# enable mouse
mousetrack on

# enable 256 color
term screen-256color

shell -$SHELL
